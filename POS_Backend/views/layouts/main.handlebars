            <div class="logo">
                <a href="#" class="simple-text">
                    <i class="material-icons">restaurant</i>
                    My Restaurant
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="active">
                        <a href="/">
                            <i class="material-icons">dashboard</i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    <li>
                        <a href="/employees">
                            <i class="material-icons">people_outline</i>
                            <p>Employees</p>
                        </a>
                    </li>
                    <li>
                        <a href="/suppliers">
                            <i class="material-icons">shop</i>
                            <p>Suppliers</p>
