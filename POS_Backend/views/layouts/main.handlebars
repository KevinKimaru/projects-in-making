                            <i class="material-icons">cake</i>
                            <p>Dishes</p>
                        </a>
                    </li>
                    <li>
                        <a href="/customerOrders">
                            <i class="material-icons">restaurant_menu</i>
                            <p>Customer orders</p>
                        </a>
                    </li>
                    <li>
                        <a href="/supplierOrders">
                            <i class="material-icons">local_grocery_store</i>
