<div class="row sign-up">
  <form action="{{action}}" method="post" class="form-horizontal" role="form">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <input type="hidden" name="inventoryId" value="{{inventoryId}}">
    <div class="form-group">
      <label for="item" class="control-label col-sm-4">Item:</label>
      <div class="col-sm-8">
        <select required class="form-control" required name="item">
          <option value="{{itemId}}">{{itemName}}</option>
          {{#each items}}
            <option value="{{itemId}}">{{itemName}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="form-group">
      <label for="quantity" class="control-label col-sm-4">Quantity:</label>
      <div class="col-sm-8">
        <input type="number" required value="{{quantity}}" class="form-control" id="quantity" name="quantity">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </form>
</div>
