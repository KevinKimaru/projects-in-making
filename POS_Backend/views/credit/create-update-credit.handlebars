<div class="content">
<div class="row sign-up">
  <form action="{{action}}" method="post" class="form-horizontal" role="form">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <input type="hidden" name="creditId" value="{{creditId}}">
    <div class="form-group">
      <label for="amount" class="control-label col-sm-3">Amount:</label>
      <div class="col-sm-7">
        <input type="number" required value="{{amount}}" class="form-control" id="amount" name="amount">
      </div>
    </div>
    <div class="form-group">
      <label for="company" class="control-label col-sm-3">Company:</label>
      <div class="col-sm-7">
        <select required class="form-control" required name="supplier" id="company">
          <option selected value="{{supplierId}}">{{companyName}}</option>
          {{# each suppliers}}
            <option value="{{supplierId}}">{{companyName}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-7">
        <button type="submit" class="btn btn-info">Submit</button>
      </div>
    </div>
  </form>
</div>

</div>
