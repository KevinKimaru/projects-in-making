<div class="content">
    {{#each foodCategories}}
    <div>
      <h3>{{name}}</h3>
      <h5>{{description}}</h5>
    </div>
    <table class="table table-striped" id="table">
      <thead>
        <th>Name</th>
        <th>Category</th>
        <th>Price</th>
        <th>Description</th>
        <th>View</th>
      </thead>
      {{#each foods}}
      <tr>
        <td>
          <input type="hidden" value="{{foodId}}">
          <span>{{name}}</span>
        </td>
        <td>
          <input type="hidden" value="{{category._id}}">
          <a href="/foodCategory/?foodCategory={{category._id}}">{{category.name}}</a>
        </td>
        <td>{{price}}</td>
        <td>{{description}}</td>
        <td>
          <i data-toggle="modal" data-target="#myModal" style="text-decoration: none" class="material-icons view">edit</i>
        </td>
      </tr>
      {{/each}}
    </table>
    <hr>
    <br>
    {{/each}}
</div>

