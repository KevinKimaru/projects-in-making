<script>
  $(document).ready(function () {
    $('#deleteLink').on('click', function () {
      var foodCategoryId = $(this).children().first().val();
      $.ajax({
        type: 'GET',
        url: 'delete-foodCategory/' + foodCategoryId,
        success: function (data) {
          if (data.success) {
            console.log('successful');
            location reload();
          }
        }
