<div class="row sign-up">
  <form action="{{action}}" method="post" class="form-horizontal" role="form">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <input type="hidden" name="salaryId" value="{{salaryId}}">
    <div class="form-group">
      <label for="employee" class="control-label col-sm-4">Employee:</label>
      <div class="col-sm-8">
        <select required class="form-control" required name="employee">
          <option selected value="{{employeeId}}">{{employeeName}}</option>
          {{#each employees}}
            <option value="{{employeeId}}">{{employeeName}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="form-group">
      <label for="amount" class="control-label col-sm-4">Amount:</label>
      <div class="col-sm-8">
        <input type="text" required value="{{amount}}" class="form-control" id="amount" name="amount">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </form>
</div>
