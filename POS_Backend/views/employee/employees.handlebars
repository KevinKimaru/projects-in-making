<div class="content">
  <table class="table table-striped" id="table">
    <thead>
      <th>Name</th>
      <th>Id Number</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Role</th>
      <th>Position</th>
      <th>Status</th>
      <th>View</th>
    </thead>
    {{#each employees}}
      <tr>
        <td>{{name}}</td>
        <td>{{idNumber}}</td>
        <td>{{email}}</td>
        <td>{{phoneNumber}}</td>
        <td>{{role}}</td>
        <td>{{position}}</td>
        <td>{{status}}</td>
        <td><a style="text-decoration: none" href="/employee?employeeId={{employeeId}}">View</a></td>
      </tr>
    {{/each}}
  </table>

  <div class="row">
            <div class="col-lg-6 col-md-12">
                <div class="card">
                    <div class="card-header" data-background-color="orange">
                        <h4 class="title">Employees Activity</h4>
                        <p class="category">{{month}}</p>
                    </div>
                    <div class="card-content table-responsive">
                        <table class="table table-hover">
                            <thead class="text-warning">
                                <th>Waiter</th>
                                <th>Orders</th>
                            </thead>
                            <tbody>
                                {{#each waitersActivity}}
                                <tr>
                                    <td>{{waiter}}</td>
                                    <td>{{orders}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
</div>
</div>

