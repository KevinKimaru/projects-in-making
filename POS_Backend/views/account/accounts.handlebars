<div class="">
  <table class="table table-striped" id="table">
    <thead>
      <th>Account Number</th>
      <th>Bank</th>
      <th>Date added</th>
      <th>Last modified</th>
      <th>View</th>
      <th>Update</th>
      <th>Delete</th>
    </thead>
    {{#each accounts}}
      <tr>
        <td>{{accountNumber}}</td>
        <td>{{bank}}</td>
        <td>{{createdDate}}</td>
        <td>{{modifiedDate}}</td>
        <td><a style="text-decoration: none" href="/account/{{accountId}}">View</a></td>
        <td><a style="text-decoration: none" href="/update-account/{{accountId}}">Update</a></td>
        <!-- TODO: REPLACE WITH AJAX CALL  -->
        <td><a id="deleteLink" style="text-decoration: none" href="/delete-account/{{accountId}}">Delete</a></td>
      </tr>
    {{/each}}
  </table>
</div>

