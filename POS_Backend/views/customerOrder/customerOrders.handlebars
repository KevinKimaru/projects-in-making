<div class="content">
    <span class="text-primary">Search</span>
    <input type="date" id="from">
    <input type="date" id="to">
    <button class="btn btn-info" ng-click="getOrders()">Go</button>
<table class="table table-striped" id="table">
    <thead>
      <tr>
        <th>Entry date</th>
        <th>foods</th>
        <th>Amount</th>
        <th>Table</th>
        <th>Waiter</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
    {{#each customerOrders}}
      <tr>
        <td rowspan="{{customerOrders.length}}">{{createdDate}}</td>
        <td><input class="foods" type="hidden" value="{{foods}}">
          <button class="btn btn info foodBtn"  
          href="#" data-toggle="popover" title="" 
          data-content="">view</button>
        </td>
        <td rowspan="{{customerOrders.length}}">{{amount}}</td>
        <td rowspan="{{customerOrders.length}}">{{table}}</td>
        <td rowspan="{{customerOrders.length}}">{{waiter}}</td>
        <td rowspan="{{customerOrders.length}}">{{status}}</td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>

{{#section 'jquery'}} 
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/pdfmake.min.js"></script>
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/vfs_fonts.js"></script>
  <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.16/af-2.2.2/b-1.5.1/b-colvis-1.5.1/b-flash-1.5.1/b-html5-1.5.1/b-print-1.5.1/cr-1.4.1/fc-3.2.4/fh-3.1.3/kt-2.3.2/r-2.2.1/rg-1.0.2/rr-1.2.3/sc-1.4.4/sl-1.2.5/datatables.min.js"></script>
  <script>
    //initialize the table
    $(document).ready(function () {
        $('#table').DataTable();

        $('[data-toggle="popover"]').popover(); 

        $('.foodBtn').on('click', function() {
          var foods = $(this).prev().val();
          $(this).attr('title', 'Foods');
          $(this).attr('data-content', foods);
        });

    });

  </script>
{{/section}}

